<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按钮没有被按下是的状态-->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:right="20dp"
                android:left="20dp"/>
            <stroke
                android:color="@color/colorTheme"
                android:width="1dp"/>
            <solid android:color="@color/buttonColor0"/>
        </shape>
    </item>
    <!--没有被选择的状态-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius"/>
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:right="20dp"
                android:left="20dp"/>
            <stroke
                android:color="@color/colorTheme"
                android:width="1dp"/>
            <solid android:color="@color/buttonClickColor0"/>
        </shape>
    </item>
</selector>